<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Visible</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post_content_truncate(post.content) %></td>
        <td><%= post.post_status %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?', remote: true}, :class => "delete" %></td>
        <td><%= link_to "#{post.comments.size} Show Comments", post_comments_path(post) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

