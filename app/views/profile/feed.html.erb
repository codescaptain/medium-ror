<p id="notice"><%= notice %></p>

<div class="container">
	<div class="row">
		<h1>Welcome CodesCaptain Project</h1>
      <table>
         <thead>
          <tr>
            <th>Title</th>
            <th>Added By</th>
            <% if user_signed_in? %>
             <th>Created At</th>
            <% end %> 
          </tr>
        </thead>

        <tbody>
          <% @posts.each do |post| %>
            <tr>
              <td><%= link_to post.title, post_path(post) %></td>
              <td>
                <% if user_signed_in? %>
                  <%= link_to post.user.nickname, profile_path(post.user) %>
                <% else %>
                <% end %>
              </td>
              <% if user_signed_in? %>
               <td><%= post.created_at %></td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>

	</div>
</div>
