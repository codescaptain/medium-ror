<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @post.content %>
</p>
<h4>Comments</h4>
<% @comments.each do |comment| %>
<div style="border: solid grey 1px;margin-top: 4px;border-radius: 4px;padding: 1rem;">
  <p><b><%= comment.title %></b></p>
  <p ><%= comment.content %></p>
  <p><%= comment.created_at %></p>
  <p>Author: <%= comment.user.nickname %></p>
</div>
  
<% end %>
<hr>
<% if user_signed_in? %>
  <% unless @post.user == current_user%>
    <h4>Add Comment</h4>
    <%= form_with model: [@post, @post.comments.build] do |form| %>
      <div class="field">
        <%= form.label :title %>
        <%= form.text_field :title %>
      </div>

      <div class="field">
        <%= form.label :content %>
        <%= form.text_area :content %>
      </div>

      <div class="actions">
        <%= form.submit %>
      </div>
    <% end %>
  <% end %>
<% end %>

<% if current_user == @post.user %>
 <%= link_to 'Edit', edit_post_path(@post) %> 
<% end %>
